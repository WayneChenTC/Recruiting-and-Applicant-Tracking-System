<ul>
<% @applications.each do |application| %>
	<li>
        <%= application.job.company.name %><br/>        
        <%= application.job.job_description %><br/>
        <%= application.job.employment_type %><br/>
	  <%= link_to 'show', user_application_path(@user, application) %>
	  <%= link_to 'edit', edit_user_application_path(@user, application) %>
      <%= button_to 'Delete', user_application_path(@user, application), :method => :delete, :data => {:confirm => "Are you sure?"} %>
	</li>
<% end %>

<p><%= link_to 'Back', users_path %></p>
</ul>

