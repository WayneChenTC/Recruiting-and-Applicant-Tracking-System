<p>
<strong>Name:</strong>
  <%= @user.name %>
  </p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Role:</strong>
  <%= @user.role %>
</p>

<p>
<strong>Document:</strong><br/>
<%= image_tag @user.document.url %>   
</p>

<% if current_user.role == 'admin' %>
  <%= link_to 'Destroy', user_path(@user),
                  method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<% if current_user.email == @user.email or current_user.role == 'admin'%>
  <%= link_to 'Edit', edit_user_path(@user) %>
  <% end %>

<%= link_to 'Back', users_path %>
