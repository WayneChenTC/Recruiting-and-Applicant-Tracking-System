<h1>Listing Users</h1>

<table>
  <tr>
    <th>Email</th>
    <th>Role</th>
  </tr>

  <% @users.each do |user| %>
    <% if current_user.role == 'admin' or user.id == current_user.id %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.role %></td>


        <td><%= link_to 'Show', user_path(user) %></td>
        <td><%= link_to 'applications', user_applications_path(user)%></td>
      </tr>
    <% end %>
  <% end %>
</table>
<br>
